	},
	"devDependencies": {
		"@types/faker": "^4.1.11",
		"@types/hapi__hapi": "^19.0.2",
		"@types/hapi__joi": "^16.0.12",
		"@types/jest": "^25.2.1",
		"@types/lodash": "^4.14.150",
		"@types/tmi.js": "^1.4.0",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"faker": "^4.1.0",
